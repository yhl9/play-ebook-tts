{
  "output_dir": "./output",
  "format": "wav",
  "bitrate": 128,
  "sample_rate": 44100,
  "channels": 2,
  "merge_files": false,
  "merge_filename": "完整音频",
  "chapter_markers": true,
  "chapter_interval": 2,
  "normalize": true,
  "noise_reduction": false,
  "concurrent_workers": 2,
  "cleanup_temp": true,
  "naming_mode": "chapter_number_title",
  "custom_template": "{chapter_num:02d}_{title}",
  "name_length_limit": 50,
  "generate_subtitle": false,
  "subtitle_format": "lrc",
  "subtitle_encoding": "utf-8",
  "subtitle_offset": 0.0,
  "subtitle_style": {
    "fontname": "Arial",
    "fontsize": 20,
    "primarycolor": "&H00FFFFFF",
    "secondarycolor": "&H000000FF",
    "outlinecolor": "&H00000000",
    "backcolor": "&H80000000",
    "bold": 0,
    "italic": 0,
    "underline": 0,
    "strikeout": 0,
    "scale_x": 100,
    "scale_y": 100,
    "spacing": 0,
    "angle": 0,
    "borderstyle": 1,
    "outline": 2,
    "shadow": 2,
    "alignment": 2,
    "margin_l": 10,
    "margin_r": 10,
    "margin_v": 10,
    "encoding": 1
  }
}
